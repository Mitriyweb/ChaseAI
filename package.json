{
    "name": "chase-ai",
    "version": "0.1.0",
    "description": "The control plane for multi-agent AI development.",
    "scripts": {
        "lint": "bun run lint:rust && bun run lint:md",
        "lint:rust": "cargo clippy --all-targets --all-features -- -D warnings",
        "lint:md": "markdownlint-cli2 \"**/*.md\"",
        "fix:md": "markdownlint-cli2 --fix \"**/*.md\"",
        "knip": "knip",
        "test": "bun run test:rust",
        "test:rust": "cargo test",
        "start": "bun run start:app",
        "start:rust": "cargo run",
        "start:prod": "./run-app.sh",
        "start:app": "./run-app.sh",
        "build": "bun run build:app",
        "build:rust": "cargo build --release",
        "build:app": "./build-macos-app.sh",
        "audit": "bun audit",
        "prepare": "prek install"
    },
    "devDependencies": {
        "knip": "5.76.3",
        "markdownlint-cli2": "0.20.0",
        "@j178/prek": "0.2.30"
    },
    "engines": {
        "bun": ">=1.0.0"
    }
}
